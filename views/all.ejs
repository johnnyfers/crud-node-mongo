<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>products</title>
</head>

<body>

    <div class="container-md">

        <h1>products</h1>
        <a href="/add">ADD products</a>

        <% for(let i=0; i < products.length; i++){ %>

            <div class="card p-4 mt-1">
                <div id="<%= products[i]._id %>""   class=" d-flex justify-content-between align-items-center">
                    <div class="d-flex flex-column">
                        <h2>
                            <%= products[i].name %>
                        </h2>
                        <div>
                            <%= products[i].description %>
                        </div>
                        <div>
                            <span class="text-muted" href="<%= products[i].category %>">
                                <%= products[i].category %>
                            </span>
                        </div>
                        <div>
                            <span class="text-muted" href="<%= products[i].price %>">
                                <%= products[i].price %>
                            </span>
                        </div>
                        <div>
                            <span class="text-muted" href="<%= products[i].quantity %>">
                                <%= products[i].quantity %>
                            </span>
                        </div>
                    </div>
                    <div class="d-flex flex-column">
                        <button class="btn btn-danger mb-2" onclick="deleteLink('<%= products[i]._id%>')" )>Delete</button>
                        <a class="btn btn-info" href="/edit/<%= products[i]._id %> ">Edit</a>
                    </div>
                </div>
            </div>

            <% } %>

    </div>

    <script src="/scripts/script.js"></script>
</body>

</html>